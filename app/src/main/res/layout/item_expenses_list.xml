<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"

    app:cardBackgroundColor="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="8dp">

        <TextView
            android:id="@+id/item_expenses_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="16dp"
            android:textColor="@color/colorSecondaryText"

            android:text="Refueling"/>

        <TextView
            android:id="@+id/item_expenses_txt_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_expenses_txt_name"
            android:layout_alignParentRight="true"
            android:textAlignment="textEnd"
            android:layout_marginHorizontal="16dp"
            android:textSize="20sp"

            android:text="$ 20.54"/>

   <!--     <ImageView
            android:id="@+id/item_expenses_img_show_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image"
            android:layout_alignParentRight="true"/>
-->

        <TextView
            android:id="@+id/item_expenses_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_expenses_txt_name"
            android:layout_marginTop="8dp"
            android:textSize="14sp"

            android:text="7/3/2018"/>


        <ImageView
            android:id="@+id/item_expenses_img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@id/item_expenses_txt_name"
            android:layout_toLeftOf="@id/item_expenses_img_delete"/>


        <ImageView
            android:id="@+id/item_expenses_img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_expenses_img_edit"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete" />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/item_expenses_frame_category"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#ffa726"
        ></FrameLayout>

</android.support.v7.widget.CardView>