<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_margin="4dp"
    tools:context=".Fragments.DateFilterFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_date_filter_img_calendar"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/date_picker"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragment_date_filter_txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="1"
            android:hint="@string/edit_text_date_hint"
            />
        <Spinner
            android:id="@+id/fragment_date_filter_date_spinner"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>