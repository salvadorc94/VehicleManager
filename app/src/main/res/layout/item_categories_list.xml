<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"

    app:cardBackgroundColor="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="8dp">

        <TextView
            android:id="@+id/item_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:textColor="@color/colorSecondaryText"
            android:text="CategoryName"/>

        <TextView
            android:id="@+id/item_categories_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_category_img_delete"
            android:layout_toRightOf="@id/item_category_name"
            android:textAlignment="textEnd"
            android:layout_marginHorizontal="16dp"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:text="CategoryType"/>

        <ImageView
            android:id="@+id/item_category_img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@id/item_category_name"
            android:layout_toLeftOf="@id/item_category_img_delete"/>


        <ImageView
            android:id="@+id/item_category_img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_marginTop="8dp"
            android:layout_below="@id/item_category_name"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/item_category_frame_category"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#ffa726"
        />

</android.support.v7.widget.CardView>